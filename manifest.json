{
  "manifest_version": 3,
  "name": "VisionAI - Chrome Assistant for Visually Impaired",
  "version": "1.0",
  "description": "AI-powered voice assistant that helps visually impaired users interact with webpages using on-device AI.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils/speech.js", "utils/ai.js", "content.js"]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}